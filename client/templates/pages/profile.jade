template(name='profile')
  .container
    .row
      .col-sm-3
        .profile.picture
          img.circular(src='http://placekitten.com/g/200/200')
        .profile.username
          h2 #{username.name}
        .profile.city
          h4 #{username.city}
        .profile.country
          h4 #{username.country}
        .profile.read-books
          p #{booksRead} books read.
        .profile.rank
          small Current rank
          h3 #{currentRank} 
        .profile.submit
          a(href='/submit')
            button.btn.btn-default Submit book
      .col-sm-9
        each borrowedBooks
          .book
            img(src="#{thumbnail}")
            span.text - #{daysLeft} days
    if currentUser
      h1 Settings
      hr
      .user-info
        .panel.panel-default
          .panel-heading
            h3.panel-title Basic information
          .panel-body
            .row
              .col-sm-offset-3.col-xs-3
                p Name
              .col-xs-9.col-sm-6
                p
                  input#name(type='text', placeholder='Edit Name ...')
            .row
              .col-sm-offset-3.col-xs-3
                p Email
              .col-xs-9.col-sm-6
                p
                  input#email(type='email', placeholder='Edit Email ...')
            .row
              .col-sm-offset-3.col-xs-3
                p City
              .col-xs-9.col-sm-6
                p
                  input#city(type='text', placeholder='Edit City ...')
            .row
              .col-sm-offset-3.col-xs-3
                p Country
              .col-xs-9.col-sm-6
                p
                  input#country(type='text', placeholder='Edit Country ...')
            button#ok-button.btn.btn-default.pull-right(type='button') Save
