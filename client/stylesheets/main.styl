body
  font-size 16px
  font-family 'Roboto'
.inline-block
	display inline-block
.logo
  width 3em
  height auto
  margin-top -1.2em
  margin-right -0.4em
.logo-text
	color #56361D
	font-size 2.5em
	font-weight 200
.navbar
	padding-top 1em
	height 5em
.navbar-default .navbar-nav > li > a
  font-family 'Roboto'
  font-weight 200
	color #fff
  &:hover
    color #FF9834
.circular
  width: 80%;
  height: auto;
  border-radius: 150px;
  @media (max-width: 767px)
    width: 50%
.full-star
  color #FF9834
.book-item
  background #F8F8F8
  padding 5px
  margin-top 0.5em
  margin-left -2em
  margin-right 2em
.big-logo
  width 300px
  height auto
.book
  padding: 0.5em
.green
  color #51B867
.levelCounter
  float right
.right
  float right
.input-group
  margin-top 1em
textarea:focus, input:focus, input[type]:focus, .uneditable-input:focus
  border-color: rgba(193, 0, 16, 0.8);
  box-shadow: 0 1px 1px rgba(255, 152, 52, 0.075) inset, 0 0 8px rgba(255, 152, 52, 0.6)
  outline: 0 none;
.max-width-940
  max-width 940px
.text-center
  text-align center